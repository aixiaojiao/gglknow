{
  "manifest_version": 3,
  "name": "Twitter推文收藏器",
  "version": "2.0.0",
  "version_name": "2.0.0 - TypeScript Refactor",
  "description": "在Twitter/X推文旁边添加收藏按钮，一键保存推文到本地文件夹。",
  "permissions": [
    "activeTab",
    "storage",
    "downloads"
  ],
  "host_permissions": [
    "https://twitter.com/*",
    "https://x.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://twitter.com/*", "https://x.com/*"],
      "js": ["content/index.js"],
      "css": ["styles.css"]
    }
  ],
  "background": {
    "service_worker": "background/index.js"
  },
  "action": {
    "default_popup": "src/popup/index.html",
    "default_title": "Twitter推文收藏器设置",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["tweet-browser.html", "tweet-browser.js", "debug.html", "help.html"],
      "matches": ["<all_urls>"]
    }
  ]
} 