{
  "manifest_version": 3,
  "name": "Twitter推文收藏器",
  "version": "1.1.6",
  "description": "在Twitter推文旁添加收藏按钮，将推文保存到本地",
  "permissions": [
    "activeTab",
    "storage",
    "downloads"
  ],
  "host_permissions": [
    "https://twitter.com/*",
    "https://x.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://twitter.com/*", "https://x.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Twitter推文收藏器设置"
  },
  "web_accessible_resources": [
    {
      "resources": ["tweet-browser.html", "tweet-browser.js", "debug.html", "help.html"],
      "matches": ["<all_urls>"]
    }
  ]
} 